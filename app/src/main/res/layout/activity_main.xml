<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="130dp"
        android:layout_height="74dp"
        android:text="0"
        android:textSize="50dp"
        android:id="@+id/textViewPunteggio"
        android:layout_gravity="right|top"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/textViewEquazione"
        android:layout_alignEnd="@+id/textViewEquazione" />

    <TextView
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:id="@+id/textViewEquazione"
        android:text="-1+2+3="
        android:textSize="50dp"

        android:layout_gravity="center_horizontal|top"
        android:layout_below="@+id/textViewPunteggio"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="50dp"
        android:id="@+id/textViewCountDown"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/textViewEquazione" />
    <com.arcaik.unoduetre.TextProgressBar
        android:id="@+id/buttonUno"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:max="10"
        android:progress="10"
        style="?android:attr/progressBarStyleHorizontal"
        android:progressDrawable="@drawable/animation"
        android:maxHeight="50dip"
        android:minHeight="50dip"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="141dp" />
    <com.arcaik.unoduetre.TextProgressBar
        android:id="@+id/buttonDue"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:max="10"
        android:progress="10"
        style="?android:attr/progressBarStyleHorizontal"
        android:progressDrawable="@drawable/animation"
        android:maxHeight="50dip"
        android:minHeight="50dip"
        android:layout_above="@+id/buttonTre"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="36dp" />
    <com.arcaik.unoduetre.TextProgressBar
        android:id="@+id/buttonTre"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:max="10"
        android:progress="10"
        style="?android:attr/progressBarStyleHorizontal"
        android:progressDrawable="@drawable/animation"
        android:maxHeight="50dip"
        android:minHeight="50dip"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
